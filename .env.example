# OpenAI API 설정 - https://platform.openai.com/api-keys 에서 생성
OPENAI_API_KEY=your_openai_api_key_here

# 네이버 API 설정 (선택사항) - https://developers.naver.com/apps 에서 생성
NAVER_CLIENT_ID=your_naver_client_id_here
NAVER_CLIENT_SECRET=your_naver_client_secret_here

# 이메일 설정
# Microsoft Outlook 또는 Gmail 계정 사용
EMAIL_SENDER=your_email@outlook.com
# Gmail의 경우 앱 비밀번호 사용 (2단계 인증 필요)
EMAIL_PASSWORD=your_app_password_or_regular_password
# 수신자 이메일 (여러 개인 경우 쉼표로 구분)
EMAIL_RECEIVER=receiver1@example.com,receiver2@example.com

# 뉴스레터 설정
NEWSLETTER_TITLE=[IT본부] 하나투어 뉴스레터
MAX_ARTICLES_PER_TOPIC=10
MAX_TOPICS=5

# Flask 보안 설정 (선택사항 - 자동 생성됨)
# FLASK_SECRET_KEY=auto_generated_secure_key